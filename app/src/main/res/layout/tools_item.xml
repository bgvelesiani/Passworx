<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/toolImage"
        android:layout_width="@dimen/tools_image_width_and_height"
        android:layout_height="@dimen/tools_image_width_and_height"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/toolTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/tools_item_title_margin_start"
        android:textColor="?attr/text_color"
        android:textSize="@dimen/tools_item_title_text_size"
        app:layout_constraintStart_toEndOf="@+id/toolImage"
        app:layout_constraintTop_toTopOf="@+id/toolImage" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/toolSubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tools_item_subtitle_margin_top"
        android:textColor="?attr/secondary_text_color"
        android:textSize="@dimen/tools_item_subtitle_text_size"
        app:layout_constraintStart_toStartOf="@+id/toolTitle"
        app:layout_constraintTop_toBottomOf="@+id/toolTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>