<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/dimen_30dp"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvPasswordName"
        tools:text="My Password"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="@dimen/dimen_22sp"
        android:fontFamily="@font/medium"
        android:textColor="@color/dark_color"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/emailOrUsernameHeader"
        android:layout_width="match_parent"
        android:text="Email or Username"
        android:textSize="@dimen/dimen_15sp"
        android:textColor="@color/dark_color"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:fontFamily="@font/medium"
        app:layout_constraintTop_toBottomOf="@id/tvPasswordName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvEmailOrUsername"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:fontFamily="@font/regular"
        android:textSize="@dimen/dimen_14sp"
        app:layout_constraintTop_toBottomOf="@id/emailOrUsernameHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="bgvelesiani2@gmail.com"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/passwordHeader"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dimen_15sp"
        android:fontFamily="@font/medium"
        android:textColor="@color/dark_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvEmailOrUsername"
        android:text="Password" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tvPassword"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:fontFamily="@font/regular"
        app:endIconMode="password_toggle"
        app:layout_constraintTop_toBottomOf="@id/passwordHeader">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:text="asdadsfasdf"
            android:paddingStart="@dimen/dimen_0dp"
            android:paddingEnd="@dimen/dimen_0dp"
            android:background="@color/white"
            android:textSize="@dimen/dimen_14sp"
            android:layout_height="wrap_content"
            android:inputType="textPassword" />

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/websiteOrAppNameHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dimen_15sp"
        android:fontFamily="@font/medium"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:textColor="@color/dark_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPassword"
        android:text="Email or Username" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvWebsiteOrAppName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/regular"
        android:textSize="@dimen/dimen_14sp"
        android:layout_marginTop="@dimen/dimen_8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/websiteOrAppNameHeader"
        tools:text="Facebook.com" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btEditPassword"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_14sp"
        android:textAllCaps="false"
        android:fontFamily="@font/regular"
        android:text="Edit Password"
        android:background="@color/dark_color"
        app:layout_constraintTop_toBottomOf="@+id/tvWebsiteOrAppName"
        tools:layout_editor_absoluteX="30dp" />
</androidx.constraintlayout.widget.ConstraintLayout>