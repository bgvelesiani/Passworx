<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/masterPasswordFragment">

    <fragment
        android:id="@+id/navigation_generate"
        android:name="com.gvelesiani.passworx.ui.passwordGenerator.PasswordGeneratorFragment"
        android:label="@string/title_password_generator"
        tools:layout="@layout/fragment_password_generator" />

    <fragment
        android:id="@+id/navigation_passwords"
        android:name="com.gvelesiani.passworx.ui.passwords.PasswordsFragment"
        android:label="@string/title_passwords"
        tools:layout="@layout/fragment_passwords">
        <action
            android:id="@+id/action_navigation_passwords_to_navigation_password_checker"
            app:destination="@id/navigation_settings" />
        <action
            android:id="@+id/action_navigation_passwords_to_navigation_generate"
            app:destination="@id/navigation_generate" />
        <action
            android:id="@+id/action_navigation_passwords_to_browseFragment"
            app:destination="@id/navigation_browse" />
        <action
            android:id="@+id/action_navigation_passwords_to_addNewPasswordActivity"
            app:destination="@id/addNewPasswordActivity" />
    </fragment>

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.gvelesiani.passworx.ui.settings.SettingsFragment"
        android:label="@string/title_settings"
        tools:layout="@layout/fragment_settings" >
        <action
            android:id="@+id/action_navigation_settings_to_createMasterPasswordFragment"
            app:destination="@id/createMasterPasswordFragment" />
        <action
            android:id="@+id/action_navigation_settings_to_changeMasterPasswordFragment"
            app:destination="@id/changeMasterPasswordFragment" />
    </fragment>
    <fragment
        android:id="@+id/passwordTrashFragment"
        android:name="com.gvelesiani.passworx.ui.trash.PasswordTrashFragment"
        android:label="@string/title_trash">
        <action
            android:id="@+id/action_passwordTrashFragment_to_navigation_browse"
            app:destination="@id/navigation_browse" />
    </fragment>
    <fragment
        android:id="@+id/navigation_browse"
        android:name="com.gvelesiani.passworx.ui.browse.BrowseFragment"
        android:label="@string/title_browse"
        tools:layout="@layout/fragment_browse">
        <action
            android:id="@+id/action_navigation_browse_to_passwordTrashFragment"
            app:destination="@id/passwordTrashFragment" />
    </fragment>
    <fragment
        android:id="@+id/masterPasswordFragment"
        tools:layout="@layout/fragment_master_password"
        android:name="com.gvelesiani.passworx.ui.masterPassword.MasterPasswordFragment"
        android:label="" >
        <action
            android:id="@+id/action_masterPasswordFragment_to_navigation_passwords"
            app:popUpTo="@id/mobile_navigation"
            app:popUpToInclusive="true"
            app:destination="@id/navigation_passwords" />
    </fragment>
    <fragment
        android:id="@+id/createMasterPasswordFragment"
        android:name="com.gvelesiani.passworx.ui.masterPassword.createMasterPassword.CreateMasterPasswordFragment"
        android:label="Change Master Password" />
    <fragment
        android:id="@+id/changeMasterPasswordFragment"
        android:name="com.gvelesiani.passworx.ui.masterPassword.changeMasterPassword.ChangeMasterPasswordFragment"
        android:label="Change Master Password" />
    <activity
        android:id="@+id/addNewPasswordActivity"
        android:name="com.gvelesiani.passworx.ui.addPassword.AddPasswordActivity"/>
</navigation>