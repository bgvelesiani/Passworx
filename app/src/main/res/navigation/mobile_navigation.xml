<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_passwords">

    <fragment
        android:id="@+id/navigation_generate"
        android:name="com.gvelesiani.passmanager.ui.passwordGenerator.PasswordGeneratorFragment"
        android:label="@string/title_password_generator"
        tools:layout="@layout/fragment_password_generator" >
        <action
            android:id="@+id/action_navigation_generate_to_navigation_passwords"
            app:destination="@id/navigation_passwords" />
    </fragment>

    <fragment
        android:id="@+id/navigation_passwords"
        android:name="com.gvelesiani.passmanager.ui.passwords.PasswordsFragment"
        android:label="@string/title_passwords"
        tools:layout="@layout/fragment_passwords" >
        <action
            android:id="@+id/action_navigation_passwords_to_navigation_password_checker"
            app:destination="@id/navigation_settings" />
        <action
            android:id="@+id/action_navigation_passwords_to_addPasswordFragment"
            app:destination="@id/addPasswordFragment" />
        <action
            android:id="@+id/action_navigation_passwords_to_navigation_generate"
            app:destination="@id/navigation_generate" />
    </fragment>

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.gvelesiani.passmanager.ui.tools.SettingsFragment"
        android:label="@string/title_settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/addPasswordFragment"
        android:name="com.gvelesiani.passmanager.ui.addPassword.AddPasswordFragment"
        android:label="@string/title_add_new_password"
        tools:layout="@layout/fragment_add_password" >
        <action
            android:id="@+id/action_addPasswordFragment_to_navigation_passwords"
            app:destination="@id/navigation_passwords" />
    </fragment>
</navigation>