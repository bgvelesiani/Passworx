<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dimen_30dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvPasswordName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/medium"
        android:gravity="center"
        android:textColor="?attr/text_color"
        android:textSize="@dimen/dimen_22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="My Password" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/emailOrUsernameHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:fontFamily="@font/medium"
        android:text="@string/email_or_username_hint"
        android:textColor="?attr/text_color"
        android:textSize="@dimen/dimen_15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPasswordName" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvEmailOrUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:fontFamily="@font/regular"
        android:textColor="?attr/secondary_text_color"
        android:textSize="@dimen/dimen_14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/emailOrUsernameHeader"
        tools:text="bgvelesiani2@gmail.com" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/passwordHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:fontFamily="@font/medium"
        android:text="@string/password_hint"
        android:textColor="?attr/text_color"
        android:textSize="@dimen/dimen_15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvEmailOrUsername" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tvPassword"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:fontFamily="@font/regular"
        app:endIconMode="password_toggle"
        app:layout_constraintTop_toBottomOf="@id/passwordHeader">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/bg_secondary"
            android:inputType="textPassword"
            android:paddingStart="@dimen/dimen_0dp"
            android:paddingEnd="@dimen/dimen_0dp"
            android:textColor="?attr/text_color"
            android:textSize="@dimen/dimen_14sp"
            tools:text="asdadsfasdf" />

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/websiteOrAppNameHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:fontFamily="@font/medium"
        android:text="@string/website_or_app_name_hint"
        android:textColor="?attr/text_color"
        android:textSize="@dimen/dimen_15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPassword" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvWebsiteOrAppName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:fontFamily="@font/regular"
        android:textColor="?attr/secondary_text_color"
        android:textSize="@dimen/dimen_14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/websiteOrAppNameHeader"
        tools:text="Facebook.com" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btUpdatePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:background="?attr/accent_color"
        android:fontFamily="@font/regular"
        android:text="@string/bs_update_password_bt_text"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_14sp"
        app:layout_constraintTop_toBottomOf="@+id/tvWebsiteOrAppName" />
</androidx.constraintlayout.widget.ConstraintLayout>